    xmlns="sap.m">
    <Page id="page" title="{i18n_sp>title}">

      <content> 
           		<Text id="txt_1" text="Mi primer programa SAPUI5" ></Text> 
    </content>

     <Button id="bt_sayHello" text="{i18n_sp>showHelloButtonText}" press=".onShowHello"></Button>
       
           <Input id="in_name" value="{/recipient/name}"
